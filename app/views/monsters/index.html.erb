    <th>Wounds</th>
    <th>On Board</th>
    <th>Dead</th>
    <th>Edit</th>
    <th>Delete</th>
  <% @monsters.each do |a| %>
    <tr>
      <td><%= link_to "#{a.monster}", game_monster_path(params[:game_id], a.id) %></td>
      <td><%= a.damage_type %></td>
      <td><%= a.attack_time %></td>
      <td><%= a.maneuver_time %></td>
      <td><%= a.vulnerability %></td>
      <td><%= a.attacks %></td>
      <td><%= a.clearing_id %></td>
      <td><%= a.prowling %></td>
      <td><%= a.blocked %></td>
      <td><%= a.spawn_row %></td>
      <td><%= a.hoard_appears %></td>
      <td><%= a.lair_appears %></td>
      <td><%= a.altar_appears %></td>
      <td><%= a.shrine_appears %></td>
      <td><%= a.pool_appears %></td>
