      <td><%= a.patter_appears %></td>
      <td><%= a.roar_appears %></td>
      <td><%= a.slither_appears %></td>
      <td><%= a.bones_appears %></td>
      <td><%= a.dank_appears %></td>
      <td><%= a.ruins_appears %></td>
      <td><%= a.stink_appears %></td>
      <td><%= a.smoke_appears %></td>
      <td><%= a.m_appears %></td>
      <td><%= a.v_appears %></td>
      <td><%= a.w_appears %></td>
      <td><%= a.c_appears %></td>
      <td><%= a.fame_reward %></td>
      <td><%= a.notoriety_reward %></td>
      <td><%= a.fatigue %></td>
      <td><%= a.wounds %></td>
      <td><%= a.on_board %></td>
      <td><%= a.dead %></td>
      <td><%= link_to "Edit #{a.monster}", edit_game_monster_path(params[:game_id], a.id) %></td>
      <td><%= link_to "Delete #{a.monster}", game_monster_path(params[:game_id], a.id), :method => :delete %></td>
    </tr>
  <% end %>
</table>

